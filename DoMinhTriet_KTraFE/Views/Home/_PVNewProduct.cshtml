@model DoMinhTriet_KTraFE.Models.ViewModel.HomeProductVM

<link rel="stylesheet" type="text/css" href="~/Content/myStyle/CustomerHome.css" />
<link rel="stylesheet" type="text/css" href="~/Content/Css/StyleHome.css" />

<div id="prodNew">

    <div>
        <div class="title">Sản phẩm mới</div>


    </div>

    <div class="button-prodNew">
        <a href="~/Home/NewDetail">
            <button class="btnprodNew">Khám Phá</button>
        </a>
    </div>
</div>
@if (Model.NewProducts != null && Model.NewProducts.Any())
{

    <div class="product-grid">
        <div class="prodContainer">
            @foreach (var product in Model.NewProducts)
            {
                <div class="product-item">
                    <a href="@Url.Action("ProductDetails", "Home", new { id = product.ProductID })">
                        <div>
                            <img src="@Html.DisplayFor(modelItem => product.ProductImage)" style="width:279.2px; height:132.95px;" class="img-fluid" />
                        </div>
                        <div class="prodDescription">
                            @Html.DisplayFor(modelItem => product.ProductName)
                        </div>
                        <div class="prodPrice">
                            @product.ProductPrice.ToString("N0")₫
                        </div>
                        <p class="prodSale">
                            Đã bán:&nbsp; @Html.DisplayFor(modelItem => product.OrderDetails.Count)
                        </p>
                    </a>
                </div>


            }
        </div>
    </div>
}
else
{
    <tr>
        <d>Không có sản phẩm nào để hiển thị.</d>
    </tr>
}


