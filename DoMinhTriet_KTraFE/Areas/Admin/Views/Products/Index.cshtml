@model IEnumerable<DoMinhTriet_KTraFE.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>SẢN PHẨM</h2>


<table class="table">
    <tr>
        <th>
            Tên danh mục
        </th>
        <th>
            Tên sản phẩm
        </th>
        <th>
            Hình ảnh
        </th>
        <th>
            Mô tả
        </th>
        <th>
            Đơn giá

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductImage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductPrice)
            </td>
            <td>
                @Html.ActionLink("Thay đổi", "Edit", new { id = item.ProductID, }, new { @class = " btn btn-primary" }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.ProductID }, new { @class = " btn btn-primary" }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.ProductID }, new { @class = " btn btn-primary" })
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Tạo mới", "Create", null, new { @class = " btn btn-primary" })
</p>
